<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/started_bg"
    android:padding="16dp"
    tools:context=".view.mitra.MitraActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/back"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/img_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:src="@drawable/baseline_photo_camera_24"
            android:background="#ADDCB5"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/photo"
            android:padding="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titik Jemput"
            android:textColor="#388E3C"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ADDCB5"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl. Andam Dewi No. 16"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_full_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl. Andam Dewi No.16, Kubu Marapalam, Kec. Padang Tim., Kota Padang, Sumatera Barat 25142"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informasi"
            android:textColor="#388E3C"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ADDCB5"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_ordered_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dipesan Oleh: Daffa Satria"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No. Ponsel: 08123456789"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keterangan: Sampah botol plastik."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Berat: 3Kg"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_pickup_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tanggal Penjemputan"
            android:background="#ADDCB5"
            android:padding="8dp"
            android:inputType="date"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_pickup_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Waktu Penjemputan"
            android:background="#ADDCB5"
            android:padding="8dp"
            android:inputType="time"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_reject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reject"
                android:backgroundTint="#ED1B0C"
                android:textColor="@android:color/black"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_accept"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accept"
                android:backgroundTint="#388E3C"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
